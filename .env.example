# ===========================================
# AetherSwarm Environment Configuration
# ===========================================

# --- Quest Engine (backend/quest-engine) ---
PORT=3001
REDIS_URL=redis://localhost:6379

# Crossmint Server-side API Key (https://www.crossmint.com/console/projects/apiKeys)
# Click "Create new key" in the Server-side keys section
# Required scopes: users.create, users.read, wallets.read, wallets.create,
#                  wallets:transactions.create, wallets:transactions.sign,
#                  wallets:balance.read, wallets.fund
CROSSMINT_API_KEY=sk_your_server_side_api_key_here

# Platform treasury wallet (receives x402 payments)
PLATFORM_TREASURY=0xYourTreasuryWalletAddress

# Thirdweb Nexus x402 (https://thirdweb.com/team/your-team/your-project)
# From your Thirdweb dashboard API Keys page:
# - Client ID: e6031b0a4d45c98b7dc2e7ee65b7edcd (visible on dashboard)
# - Secret Key: The full secret key you saved when creating it
# - Wallet Address: Your Project Wallet address (0xFc2b2e...4245bA)
THIRDWEB_SECRET_KEY=your_full_secret_key_here
THIRDWEB_WALLET_ADDRESS=0xFc2b2e...your_project_wallet_address

# ERC-8004 Registry (deploy DiscoveryRegistry.sol first)
DISCOVERY_REGISTRY_ADDRESS=0xDeployedDiscoveryRegistryAddress
REPUTATION_REGISTRY_ADDRESS=0xDeployedReputationRegistryAddress

# Blockchain RPC
RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_alchemy_key

# --- Swarm Coordinator (backend/swarm-coordinator) ---
WS_PORT=8080
HEALTH_PORT=8081

# --- Scout Agent (agents/scout) ---
COORDINATOR_WS_URL=ws://localhost:8080
AGENT_PRIVATE_KEY=0xYourAgentPrivateKey
AGENT_ID=scout-001

# --- Verifier Agent (agents/verifier) ---
EIGENCLOUD_API_KEY=your_eigencloud_api_key
EIGENCLOUD_API_URL=https://api.eigencloud.xyz
EIGENCLOUD_DEV_MODE=true  # Remove in production

# --- Synthesizer Agent (agents/synthesizer) ---
AGENT_ADDRESS=0xYourSynthesizerAddress
IPFS_GATEWAY=https://ipfs.io
PINATA_API_KEY=your_pinata_key  # For IPFS uploads

# --- Frontend (frontend/marketplace) ---
NEXT_PUBLIC_QUEST_ENGINE_URL=http://localhost:3001
NEXT_PUBLIC_DISCOVERY_REGISTRY=0xDeployedDiscoveryRegistryAddress
NEXT_PUBLIC_CHAIN_ID=137
NEXT_PUBLIC_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_key

# --- Abstract Chain (optional) ---
ABSTRACT_CHAIN_ID=2741
ABSTRACT_RPC_URL=https://api.mainnet.abs.xyz
